ip dhcp pool {{item.pool}}
 network {{item.network_pool}}
 default-router {{item.gateway_pool}}
 dns-server {{item.dns_pool}}

router ospf {{ item.ospf_id }}
{% for net in item.ospf_network %}
 network {{ net }} area 0
{% endfor %}