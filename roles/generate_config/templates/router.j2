interface GigabitEthernet2
 description {{item.desc_g2}}
 ip address {{item.ip_g2}} {{item.netmask_g2}}
 no shutdown
!
interface GigabitEthernet3
 description {{item.desc_g3}}
 ip address {{item.ip_g3}} {{item.netmask_g3}}
 no shutdown
!
interface GigabitEthernet4
 description {{item.desc_g4}}
 ip address {{item.ip_g4}} {{item.netmask_g4}}
